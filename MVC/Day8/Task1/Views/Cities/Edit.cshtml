@model Task1.Models.City

@{
    ViewData["Title"] = "Edit";
}
<script src ="~/jquery/jquery.min.js" ></script>
 <script src ="~/jquery-validate/jquery.validate.min.js" ></script>
 <script src ="~/jquery-validate-unobtrusive/jquery.validate.unobtrusive.min.js" ></script>

<h1>Edit</h1>

<h4>City</h4>
