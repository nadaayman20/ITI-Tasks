@model HandleErrorInfo
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup style="text-align:center">
        <h1 style="color:red">HR Not Found.</h1>
        <h2>An error occurred while processing your request.</h2>
        <h4>Error Details:@Model.Exception.Message </h4>
        <h4>Controller:@Model.ControllerName ***** Action:@Model.ActionName </h4>
    </hgroup>
</body>
</html>
