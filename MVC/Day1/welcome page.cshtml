</head>
<body>
    <h1 style="text-align:center ; padding:20px 0 0 ">Welcome Page</h1>
    <div class="containerr">

        <form method="post">
            <label>Name : </label>
            <input type="text" name="name" />
            <br /><br />
            <label>Birthdate : </label>
            <input type="date" name="date" />
            <br /><br />
            <input type="submit" value="GO" />
            <input type="checkbox" name="graduate" value="true" />
            <label>Is Graduated</label>
        </form>

    </div>
    @if (IsPost)
    {
        <div style="text-align:center ; padding:0 0 10px">
            <p style="color: red; font-size: 20px"> Hello @Request["name"]</p>
            <p style="color: blue; font-size: 20px; padding:10px 0"> Your Birthday is  @Request["date"]</p>
            @if (Request["graduate"] == "true")
            {
                <p style="font-size: 20px">YESSSS , Am Graduated </p>
            }
        </div>
    }


</body>

