<Window x:Class="Task9_WPF.DetailedView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task9_WPF"
        mc:Ignorable="d"
        Title="DetailedView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="StackPanelCustom">
            <Label x:Name="ProductID" FontSize="22" HorizontalAlignment="Left" Margin="10,20" Height="40" Width="150"/>
            <TextBox x:Name="ProductName" Padding="6" FontSize="18" Margin="10" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="150"/>
            <TextBox x:Name="ProductPrice" Padding="6" FontSize="18" Margin="10" HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Center" Width="150"/>

 
            <Button HorizontalAlignment="Left" Margin="20,20,20,20" VerticalAlignment="Top"  Padding="7" Width="80" Click="Save" FontSize="18">Save</Button>

        </StackPanel>

        <ListBox x:Name="productList" Grid.Column="1">
        </ListBox>

    </Grid>
</Window>
