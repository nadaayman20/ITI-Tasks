<Window x:Class="Task9_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task9_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="15*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <ToolBar>
                <Menu>
                    <MenuItem Header="Menu" Width="150" Height="40" FontSize="16">
                        <MenuItem Header="Load" Click="Load"/>
                        <MenuItem Header="Save" Click="Save"/>
                        <MenuItem Header="Clear" Click="Clear" />
                        <MenuItem Header="Close" Click="Close" />
                    </MenuItem>
                </Menu>
            </ToolBar>
        </StackPanel>

        <DataGrid  Grid.Row="2" x:Name="data"/>
    </Grid>
</Window>
